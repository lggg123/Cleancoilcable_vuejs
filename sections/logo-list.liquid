<div class="logo-list">
    <h2 class="heading center">{{ section.settings.title }}</h2>

    <div class="logo-container">
        <div class="card">
            <a href="{{ block.settings.link }}" class="logo-link">
                <img loading="lazy" src="{{ 'free-worldwide-delivery.jpeg' | asset_img_url: '2048x2048' }}" alt="services">
            </a>
            <h3>Free Worldwide Shipping</h3>
            <p>We proudly offer Free Shipping. Handling time 1-3 business days. Estimated delivery between 5-12 business days.</p>
        </div>
        <div class="card">
            <a href="{{ block.settings.link }}" class="logo-link">
                <img loading="lazy" src="{{ 'secure-checkout.jpeg' | asset_img_url: '2048x2048' }}" alt="services">
            </a>
            <h3>Secure Checkout</h3>
            <p>We stand by our high-quality products and your satisfaction is guaranteed.</p>
        </div>
        <div class="card">
            <a href="{{ block.settings.link }}" class="logo-link">
                <img loading="lazy" src="{{ 'satisfaction-guarantee.jpeg' | asset_img_url: '2048x2048' }}" alt="services">
            </a>
            <h3>Satisfaction Guarantee</h3>
            <p>We stand by our high-quality products and your satisfaction is guaranteed.</p>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Logo List",
    "max_blocks": 4,
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Logo List"
        }
    ],
    "blocks": [
        {
            "type": "logo_image",
            "name": "Logo",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Logo image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Section Heading"
                },
                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Description",
                    "default": "<p>Add your description here</p>"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Logo link",
                    "info": "Optional"
                }
            ]
        }
    ],
    "presets": [
        {
           "name": "Logo list",
           "category": "Image",
           "blocks": [
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                }
           ] 
        }
    ]
}

{% endschema %}
